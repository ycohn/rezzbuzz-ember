<div class="jumbotron jumbotron-fluid inner-page">
  <div class="container">
    <h2 class="display-3 text-center">{{model.title}}. Discuss.</h2>
    <h3 class="lead text-center">We'll give ya a topic: {{model.description}}</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="text-center">Here's the BUZZ about {{model.title}}</h3>      
        </div>
      <div class="panel-body">
        <div class="panel panel-default">
          <ul class="list-group">
            {{#if model.messages}}
            {{#each model.messages as |message|}}
              <li class="list-group-item">{{message.content}}
                
              <small class="pull-right"><cite>Posted by {{message.user.firstname}} on
                  {{prettyDate message.createdAt}}</cite></small>
              </li>
            {{/each}}
            {{else}} 
            <li class="list-group-item">There are no messages in this topic yet.  Add one below.</li> 
            {{/if}}               
          </ul>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
    {{create-message onSubmit="addMessage"}}
    </div>
    </div>

</div>
</div>
