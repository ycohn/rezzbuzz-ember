<div class="jumbotron jumbotron-fluid inner-page">
  <div class="container">
    <h2 class="display-3 text-center">{{model.title}}. Discuss.</h2>
    <h3 class="lead text-center">We'll give ya a topic: {{model.description}}</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="text-center">Messages</h3>      
        </div>
      <div class="panel-body">
        <div class="panel panel-default">
          <ul class="list-group">
            {{#each model.messages as |message|}}
              <li class="list-group-item">{{message.content}}</li>
            {{/each}}                
          </ul>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">

    {{create-message onSubmit="addMessage"}}
    </div>
    </div>

</div>
</div>
