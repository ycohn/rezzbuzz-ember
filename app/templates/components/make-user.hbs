<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="well bs-component">
        <form class="form-horizontal"{{action "submit" on="submit"}}>
          <fieldset>
            <legend>Sign Up</legend>
            <div class="form-group">
              <label for="firstname" class="col-lg-3 control-label form-text">First Name</label>
              <div class="col-lg-9">
                {{input value=user.firstname type="text" class="form-control input-lg" placeholder="John" id="user-firstname"}}
              </div>
            </div>
            <div class="form-group">
              <label for="lastname" class="col-lg-3 control-label form-text">Last Name</label>
              <div class="col-lg-9">
                {{input value=user.lastname type="text" class="form-control input-lg" placeholder="Smith" id="user-lastname"}}
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail" class="col-lg-3 control-label form-text">Email</label>
              <div class="col-lg-9">
                {{input value=user.email type="text" class="form-control input-lg" placeholder="Email" id="user-email"}}
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword" class="col-lg-3 control-label form-text">Password</label>
              <div class="col-lg-9">
                {{input value=user.password type="password" class="form-control input-lg" placeholder="Password" id="user-password"}}
              </div>
            </div>
            <div class="form-group">
             <label for="textArea" class="col-lg-3 control-label form-text">Bio</label>
             <div class="col-lg-9">
               {{textarea input class="form-control input-lg" value=user.bio placeholder="Tell us about yourself"}}
             </div>
           </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-3">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
